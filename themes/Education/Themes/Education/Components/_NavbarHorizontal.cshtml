            </a>
        </div>

        <!-- Horizontal Menu (Moved Inside Navbar) -->
        <div class="navbar-menu-wrapper flex-grow-1 d-none d-xl-flex">
            <ul class="navbar-nav flex-row align-items-center ms-4 me-auto">
                @foreach (var menuItem in menu.Items)
                {
                    var elementId = string.IsNullOrEmpty(menuItem.ElementId) ? string.Empty :
                    $"id=\"{menuItem.ElementId}\"";
                    var cssClass = string.IsNullOrEmpty(menuItem.CssClass) ? string.Empty : menuItem.CssClass;
                    var disabled = menuItem.IsDisabled ? "disabled" : string.Empty;
                    var url = string.IsNullOrEmpty(menuItem.Url) ? "#" : Url.Content(menuItem.Url);

                    if (menuItem.Items.IsNullOrEmpty())
                    {
                        <!-- Single Leaf Item -->
                        <li class="nav-item me-2 me-xl-0 @(menuItem.Name == "DATERP.Home" ? "active" : "")">
                            <a href="@url" class="nav-link @cssClass @disabled" @Html.Raw(elementId)>
                                @if (!string.IsNullOrEmpty(menuItem.Icon))
                                {
                                    <i class="@menuItem.Icon me-2"></i>
                                }
                                <span class="align-middle">@menuItem.DisplayName</span>
                            </a>
                        </li>
                    }
                    else
                    {
                        <!-- Dropdown Item -->
                        <li class="nav-item dropdown me-2 me-xl-0">
                            <a class="nav-link dropdown-toggle @cssClass @disabled" href="javascript:void(0)"
                                data-bs-toggle="dropdown" @Html.Raw(elementId)>
                                @if (!string.IsNullOrEmpty(menuItem.Icon))
                                {
                                    <i class="@menuItem.Icon me-2"></i>
                                }
                                <span class="align-middle">@menuItem.DisplayName</span>
                            </a>
                            <ul class="dropdown-menu">
                                @foreach (var subItem in menuItem.Items)
                                {
                                    var subUrl = string.IsNullOrEmpty(subItem.Url) ? "#" : Url.Content(subItem.Url);
                                    <li>
                                        <a href="@subUrl"
                                            class="dropdown-item @(subItem.CssClass) @(subItem.IsDisabled ? "disabled" : "")">
                                            @if (!string.IsNullOrEmpty(subItem.Icon))
                                            {
                                                <i class="@subItem.Icon me-2"></i>
                                            }
                                            <span class="align-middle">@subItem.DisplayName</span>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>
                    }
                }
            </ul>
        </div>
        <!--/ Horizontal Menu -->

